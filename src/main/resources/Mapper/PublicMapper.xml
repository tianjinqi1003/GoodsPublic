<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="goodsPublic.dao.PublicMapper">
	<insert id="addGoodsPublic" parameterType="goodsPublic.entity.Goods" >
		insert into public_goods
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="category_id!=null">
				category_id,
			</if>
			<if test="accountNumber!=null">
				accountNumber,
			</if>
			<if test="goodsNumber!=null">
				goodsNumber,
			</if>
			<if test="title!=null">
				title,
			</if>
			<if test="imgUrl!=null">
				imgUrl,
			</if>
			<if test="htmlContent!=null">
				htmlContent,
			</if>
			gmt_create
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="category_id!=null">
				#{category_id},
			</if>
			<if test="accountNumber!=null">
				#{accountNumber},
			</if>
			<if test="goodsNumber!=null">
				#{goodsNumber},
			</if>
			<if test="title!=null">
				#{title},
			</if>
			<if test="imgUrl!=null">
				#{imgUrl},
			</if>
			<if test="htmlContent!=null">
				#{htmlContent},
			</if>
			now()
		</trim>
	</insert>
	<update id="updateQrcode" parameterType="java.lang.String">
		update public_goods set qrCode=#{param1} where goodsNumber=#{param2}
	</update>
	<update id="updateGoods" parameterType="goodsPublic.entity.Goods">
		update public_goods set 
		<if test="category_id!=null">
			category_id=#{category_id},
		</if>
		<if test="title!=null">
			title=#{title},
		</if>
		<if test="imgUrl!=''&amp;imgUrl!=null">
			imgUrl=#{imgUrl},
		</if>
		<if test="htmlContent!=null">
			htmlContent=#{htmlContent},
		</if>
		gmt_modified=now()
		where id=#{id}
	</update>
	<update id="editAccountInfo" parameterType="goodsPublic.entity.AccountMsg">
		update account_info set 
		<if test="avatar_img!=''&amp;avatar_img!=null">
			avatar_img=#{avatar_img},
		</if>
		<if test="companyName!=''&amp;companyName!=null">
			companyName=#{companyName},
		</if>
		<if test="companyAddress!=''&amp;companyAddress!=null">
			companyAddress=#{companyAddress},
		</if>
		<if test="postcode!=''&amp;postcode!=null">
			postcode=#{postcode},
		</if>
		<if test="phone!=''&amp;phone!=null">
			phone=#{phone},
		</if>
		<if test="quotient!=''&amp;quotient!=null">
			quotient=#{quotient},
		</if>
		<if test="fax!=''&amp;fax!=null">
			fax=#{fax},
		</if>
		<if test="email!=''&amp;email!=null">
			email=#{email},
		</if>
		<if test="countCode!=''&amp;countCode!=null">
			countCode=#{countCode},
		</if>
		<if test="recordNumber!=''&amp;recordNumber!=null">
			recordNumber=#{recordNumber},
		</if>
		<if test="nickName!=''&amp;nickName!=null">
			nickName=#{nickName}
		</if>
		where id=#{id}
	</update>
	<select id="getAllGoodsMsg" resultType="goodsPublic.entity.Goods">
		select * from public_goods
		where goodsNumber=#{goodsNumber}
	</select>
	<select id="queryGoodsForInt" resultType="java.lang.Integer">
		select count(*) from public_goods where accountNumber=#{param1} and category_id=#{param2}
	</select>
	<select id="queryGoodsList" resultType="goodsPublic.entity.Goods">
		select * from public_goods where accountNumber=#{param1} and category_id=#{param2} limit ${param3},${param4}
	</select>
	<select id="queryGoodsListByCateId" resultType="goodsPublic.entity.Goods">
		select title,goodsNumber,category_id from public_goods where category_id=#{param1}
	</select>
	<select id="getGoodsById" resultType="goodsPublic.entity.Goods">
		select * from public_goods where id=#{param1}
	</select>
	<select id="getAccountById" resultType="goodsPublic.entity.AccountMsg">
		select * from account_info where id=#{param1}
	</select>
	<select id="getGoodsListByMsg" resultType="int">
		select count(*) from public_goods where accountNumber=#{id}
	</select>
</mapper>