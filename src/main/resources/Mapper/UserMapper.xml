<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="goodsPublic.dao.UserMapper">
	<select id="getUserListByUser" resultType="goodsPublic.entity.AccountMsg">
		select * from
		account_info
	</select>
	<insert id="saveUser">
		insert into account_info
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="userName!=null">
				userName,
			</if>
			<if test="passWord!=null">
				passWord,
			</if>
			<if test="nickName!=null">
				nickName,
			</if>
			<if test="phone!=null">
				phone,
			</if>
			<if test="email!=null">
				email,
			</if>
			gmt_create
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="userName!=null">
				#{userName},
			</if>
			<if test="passWord!=null">
				#{passWord},
			</if>
			<if test="nickName!=null">
				#{nickName},
			</if>
			<if test="phone!=null">
				#{phone},
			</if>
			<if test="email!=null">
				#{email},
			</if>
			now()
		</trim>
	</insert>
	<select id="getUser" resultType="goodsPublic.entity.AccountMsg">
		select * from
		account_info
		where
		<trim prefix="" suffix="" suffixOverrides="and">
			<if test="userName!=null">
				userName=#{userName} and
			</if>
			<if test="nickName!=null">
				nickName=#{nickName} and
			</if>
			<if test="phone!=null">
				phone=#{phone} and
			</if>
			<if test="email!=null">
				email=#{email}
			</if>
		</trim>
	</select>
</mapper>